<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="32dp"
        android:background="#F8F8F8">
        <Button
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:background="@drawable/backarrow"
            android:layout_marginLeft="18dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="包包分类"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/sub_1"
            android:layout_width="144dp"
            android:layout_height="134dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="38dp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/sub_2"
            android:layout_width="144dp"
            android:layout_height="134dp"
            android:layout_marginTop="38dp"
            android:layout_toRightOf="@id/sub_1"
            android:layout_marginLeft="43dp"
        />
        <androidx.cardview.widget.CardView
            android:id="@+id/sub_3"
            android:layout_width="144dp"
            android:layout_height="134dp"
            android:layout_marginLeft="40dp"
            android:layout_below="@id/sub_1"
            android:layout_marginTop="38dp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/sub_4"
            android:layout_width="144dp"
            android:layout_height="134dp"
            android:layout_alignRight="@id/sub_2"
            android:layout_marginTop="38dp"
            android:layout_below="@id/sub_2"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/sub_5"
            android:layout_width="144dp"
            android:layout_height="134dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="38dp"
            android:layout_below="@id/sub_3"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/sub_6"
            android:layout_width="144dp"
            android:layout_height="134dp"
            android:layout_marginLeft="40dp"
            android:layout_below="@id/sub_4"
            android:layout_alignRight="@id/sub_4"
            android:layout_marginTop="38dp"/>
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="253dp"
    android:layout_height="392dp"
    android:orientation="vertical"
    android:background="@drawable/appraisalpointdialog_background">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:src="@drawable/decorate_line"
        android:scaleType="fitCenter"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/pointName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="28dp"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/pointcontent"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_marginTop="62dp"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/pointImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/pointcontent"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/confirm_button"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:background="@drawable/login_button_background"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="15sp"/>
</RelativeLayout>
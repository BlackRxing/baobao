<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout_enterprise"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/login_first_edit"
    android:layout_marginTop="14dp"
    android:gravity="center"
    >
    <EditText
        android:id="@+id/enterprise_password_edit"
        android:layout_height="40dp"
        android:layout_width="327dp"
        android:hint="@string/account_password"
        android:textColorHint="@color/white"
        android:textSize="14sp"
        android:background="@drawable/login_textview_background"
        android:paddingStart="26dp"
        android:maxLines="1"
        android:inputType="number"
        />

</LinearLayout>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="settingTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="indicatorStyle">
        <item name="android:layout_width">6dp</item>
        <item name="android:layout_height">11dp</item>
        <item name="android:background">@drawable/indicator</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginRight">24dp</item>
    </style>

    <style name="ActionSheetDialogBase.SampleStyle">
        <item name="cancelTextColor">@color/black</item>
        <item name="itemTextColor">@color/black</item>
        <item name="itemDividerHeight">2dp</item>
    </style>


    <style name="My_CheckBox" parent="@android:style/Widget.Material.CompoundButton.CheckBox">
        <item name="android:colorControlActivated">@color/transparent_grey</item>
<!--        <item name="android:colorControlNormal">@color/transparent_grey</item>-->
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.baoxiaojianapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".baoxiaojianapp.Utils.MyApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:allowBackup">
        <activity android:name=".baoxiaojianapp.activity.AboutActivity"></activity>
        <activity android:name=".baoxiaojianapp.activity.FeedbackActivity"></activity>
        <activity android:name=".baoxiaojianapp.activity.SettingActivity" />
        <activity android:name=".baoxiaojianapp.activity.EditNickNameActivity" />
        <activity
            android:name=".baoxiaojianapp.activity.InfoSettingActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".baoxiaojianapp.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".baoxiaojianapp.activity.SplashActivity" />
        <activity
            android:name=".baoxiaojianapp.activity.LoginActivity"
            android:screenOrientation="portrait" />

        <provider
            android:name=".baoxiaojianapp.Utils.MyProvider"
            android:authorities="com.example.baoxiaojianapp.filesProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>